@{
    Layout = "_en.layout";
}

<a href="@Url.Action("List", "RessourceServer")" class="btn btn-sq-lg btn-blue" style="padding-top: 20px">
    Ressource <br />Servers<br />
    <span id="ressourceServerCount"></span>
</a>
&nbsp;
<a href="@Url.Action("List", "Client")" class="btn btn-sq-lg btn-blue">
    Clients<br />
    <span id="clientCount"></span>
</a>
&nbsp;
<a href="@Url.Action("Edit", "Account")" class="btn btn-sq-lg btn-blue">
    My<br />Account
</a>

@section PageScript{
    <script type="text/javascript">
        $(document).ready(function () {
            $.get("/en/Home/GetClientNumberAsync", function (data, status) {
                $('#clientCount').html(data);
            });

            $.get("/fr/Home/GetRessourceServerNumberAsync", function (data, status) {
                $('#ressourceServerCount').html(data);
            });
        });
    </script>
}