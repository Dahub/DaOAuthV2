@model DaOAuthV2.Gui.Front.Models.ChangePasswordModel

@{
    Layout = "_fr.layout";
}

@await Html.PartialAsync("_fr.modelErrors")

<h1>Modifier votre mot de passe</h1>
<hr />


<form asp-action="ChangePassword" id="rsForm" method="post">
    <div class="row">
        <div class="col">
            <h3>Veuillez remplir le formulaire</h3>

            <div class="form-group">
                <label asp-for="OldPassword" class="control-label">Ancien mot de passe</label>
                @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label asp-for="NewPassword" class="control-label">Nouveau mot de passe</label>
                @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label asp-for="NewPasswordRepeat" class="control-label">Répétez le nouveau mot de passe</label>
                @Html.PasswordFor(model => model.NewPasswordRepeat, new { @class = "form-control" })
            </div>

        </div>
        <div class="w-100"></div>
        <br />
        <div class="col-3">
            <a href="@Url.Action("Edit", "Account")" class="btn btn-lg btn-secondary btn-block">Retour</a>
        </div>
        <div class="col-9">
            <input id="putForm" type="submit" value="Valider" class="btn btn-lg btn-primary btn-block" />
        </div>

    </div>
</form>