@model DaOAuthV2.Gui.Front.Models.ChangePasswordModel

@{
    Layout = "_en.layout";
}

@await Html.PartialAsync("_en.modelErrors")

<h1>Change your password</h1>
<hr />


<form asp-action="ChangePassword" id="rsForm" method="post">
    <div class="row">
        <div class="col">
            <h3>Please fill the form</h3>

            <div class="form-group">
                <label asp-for="OldPassword" class="control-label">Old password</label>
                @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label asp-for="NewPassword" class="control-label">New password</label>
                @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label asp-for="NewPasswordRepeat" class="control-label">Repeat new password</label>
                @Html.PasswordFor(model => model.NewPasswordRepeat, new { @class = "form-control" })
            </div>

        </div>
        <div class="w-100"></div>
        <br />
        <div class="col-3">
            <a href="@Url.Action("Edit", "Account")" class="btn btn-lg btn-secondary btn-block">Back</a>
        </div>
        <div class="col-9">
            <input id="putForm" type="submit" value="Submit" class="btn btn-lg btn-primary btn-block" />
        </div>

    </div>
</form>