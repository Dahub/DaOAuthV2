@model DaOAuthV2.Gui.Front.Models.LoginModel

@{
    Layout = "_fr.layout";
}

@section Css{
    <link href="~/css/login.css" rel="stylesheet" />
}

@await Html.PartialAsync("_fr.modelErrors")

<div class="row">
    <div class="login-main text-center col-12">

        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin" }))
        {
            <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>
            <label for="inputEmail" class="sr-only">Nom d'utilisateur</label>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User name" })
            <label for="inputPassword" class="sr-only">Mot de passe</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            <div class="checkbox mb-3">
                <label>
                    @Html.EditorFor(m => m.RememberMe) se souvenir de moi
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Se connecter</button>
            @Html.ActionLink("Créer un compte", "Register");
        }
        
    </div>
</div>